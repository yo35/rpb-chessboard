{
    "name": "rpb-chessboard",
    "private": true,
    "dependencies": {
        "@wordpress/block-editor": "^15.8.0",
        "@wordpress/blocks": "^15.8.0",
        "@wordpress/components": "^30.8.0",
        "@wordpress/data": "^10.35.0",
        "@wordpress/icons": "^11.2.0",
        "kokopu": "^4.13.0",
        "kokopu-react": "^3.3.4",
        "prop-types": "^15.8.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@stylistic/eslint-plugin": "^5.6.1",
        "@wordpress/scripts": "^31.0.0",
        "archiver": "^7.0.1",
        "eslint": "^9.39.1",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.5.0",
        "rimraf": "^6.1.2",
        "uglifycss": "^0.0.29"
    },
    "scripts": {
        "lint": "npm run lint:js && npm run lint:php",
        "lint:js": "eslint src",
        "lint:php": "phpcs --colors php rpb-chessboard.php",
        "build": "npm run build:css && npm run build:i18n && npm run build:js",
        "build:css": "uglifycss --output css/admin.min.css css/admin.css",
        "build:i18n": "make -f scripts/Makefile i18n-compile",
        "build:js": "wp-scripts build",
        "clean": "rimraf build css/admin.min.css rpb-chessboard.zip && make -f scripts/Makefile clean",
        "prepack": "npm run lint && npm run build",
        "pack": "node scripts/build-archive.js"
    }
}
